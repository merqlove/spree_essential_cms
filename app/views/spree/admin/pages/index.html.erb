<% content_for :page_actions do %>
  <%= button_link_to  t("new_page"), new_object_url(:page_id => @page&.path), :icon => 'add', :class => "btn-success", :id => "new_page_link" %>
<% end if can? :create, Spree::Page %>

<% content_for :page_title do %>
  <%= t('.listing_pages') %>
<% end %>

<table class="index sortable table" data-sortable-link="<%= update_positions_admin_pages_url -%>">
  <thead>
  <tr>
      <th class="no-border"></th>
      <th><%= sort_link @search, :title, t("page.title") %></th>
      <th><%= sort_link @search, :path, t("page.path") %></th>
      <th><%= sort_link @search, :accessible, t("page.accessible") %></th>
      <th><%= sort_link @search, :visible, t("page.visible") %></th>
      <th><%= t("action") %></th>
  </tr>
  </thead>
  <tbody>
    <%- @collection.each do |page|%>
    <tr id="<%= dom_id page %>">
      <td class="move-handle">
        <span class="icon icon-sort handle"></span>
      </td>
      <td><%=link_to page.title, object_url(page) %></td>
      <td><%= page.path %></td>
      <td><%= page.accessible %></td>
      <td><%= page.visible %></td>
      <td>
        <%= link_to_with_icon :accept, t('preview'), page.path, :no_text => true, :onclick => 'window.open(this.href);return false;' %> &nbsp;
        <%= link_to_with_icon :pages, t('page.contents'), admin_page_contents_path(page), :no_text => true %> &nbsp;
        <%= link_to_edit page, :no_text => true %> &nbsp;
        <%= link_to_delete page, :no_text => true %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @collection %>

<% content_for :sidebar do %>
<div class="box">
  <h3><%= t(:search) %></h3>

  <% @page = Spree::Page.search %>
  <%= search_form_for [:admin, @page] do |f| %>
    <%= f.field_container :title_cont, class: ['form-group'] do %>
      <label><%= t '.title_contains' %></label>
      <%= f.text_field :title_cont, :size => 25, :class => "form-control" %>
    <% end %>
    <p><%= button t("search") %></p>
  <% end %>
</div>
<% end %>
