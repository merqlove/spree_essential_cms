<%= render :partial => 'spree/admin/shared/page_tabs', :locals => {:current => "Images"} unless request.xhr? %>

<% content_for :page_title do %>
  <%= t('.new_image') %>
<% end %>

<%= render :partial => 'spree/admin/shared/error_messages', :locals => { :target => @page_image } %>

<%= form_for(@page_image, :url => admin_page_images_path(@page), :html => { :multipart => true }) do |f| %>
  <fieldset>
    <%= render :partial => 'form', :form => f %>
    <%= render :partial => 'spree/admin/shared/new_resource_links' %>
  </fieldset>
<% end %>

<script type="text/javascript">    
  jQuery('#cancel_link').click(function (event) { 
    jQuery('#new_image_link').show();
    jQuery('#images').html('');
  }); 
</script>
